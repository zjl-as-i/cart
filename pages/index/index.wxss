/**index.wxss**/

page {
  background-color: #fff;
  font-family: "Helvetica Neue",
                 "Hiragino Sans GB",
                 "Microsoft YaHei",
                 "\9ED1\4F53",
                 Arial,
                 sans-serif;
  font-size: 32rpx;
}

.navigator-hover {
  background: none;
}

page, .main {
  height: 100%;
}

.categroy-left {
  float: left;
  width: 150rpx;
  /* border-right: 1px solid #ddd; */
  overflow: auto;
}

.categroy-left .cate-list {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-left: 3px solid #fff;
}

.categroy-left .cate-list.on {
  color: #ab956d;
  border-color: #ab956d;
} 

.categroy-right {
  float: right;
  width: 600rpx;
  overflow: auto;
  box-sizing: border-box;
}

.cate-box {
  /* height: 100%; */
  padding: 20rpx 20rpx 0 20rpx;
  box-sizing: content-box;
}

.product-list {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin: 0 20rpx 20rpx 0;
}

.goods {
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #ddd;
}

.good-img {
  padding: 5px;
  width: 40px;
  height: 40px;
}

.good-cont {
  display: flex;
  flex: 1;
  flex-direction: column;
  font-size: 14px;
}

.goods-navigator {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
}

.good-name {
  display: flex;
  flex: 1;
  flex-direction: column;
  color: #555;
}

.good-price {
  display: flex;
  flex: 1;
  flex-direction: row;
  justify-content: space-between;
  color: #e4393c;
  font-weight: 600;
}

.num-box {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.btn-groups {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  border-radius: 10rpx;
}

.goods-btn {
  width: 50rpx;
  height: 50rpx;
  padding: 0;
  line-height: 50rpx;
  font-weight: bold;
  margin: 0;
  border-radius: 50%;
  background: #ab956d;
}

.num {
  color: #999;
  width: 60rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 24rpx;
}

.btn-add {
  font-size: 28rpx;
}

.btn-minus {
  font-size: 28rpx;
}

.orders-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 95rpx;
  line-height: 95rpx;
  border-top: 1rpx solid #ededed;
}

.orders-footer .orders-footer-total {
  display: inline-block;
  width: 510rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
  color: #a55350;
}

.orders-footer .orders-footer-btn {
  display: inline-block;
  width: 240rpx;
  text-align: center;
  color: #fff;
  background: #ab956d;
}
